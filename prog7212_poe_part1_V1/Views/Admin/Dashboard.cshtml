@model prog7212_poe_part1_V1.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Total Reports</p>
                                <h5 class="font-weight-bolder mb-0">@Model.TotalReports</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="ni ni-paper-diploma text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Pending</p>
                                <h5 class="font-weight-bolder mb-0 text-warning">@Model.PendingReports</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                                <i class="ni ni-time-alarm text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">In Progress</p>
                                <h5 class="font-weight-bolder mb-0 text-info">@Model.InProgressReports</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                <i class="ni ni-settings text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Completed</p>
                                <h5 class="font-weight-bolder mb-0 text-success">@Model.CompletedReports</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                                <i class="ni ni-check-bold text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Reports -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6>Recent Reports</h6>
                        <a href="@Url.Action("Reports")" class="btn btn-outline-primary btn-sm">View All</a>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    @if (Model.RecentReports.Any())
                    {
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Report</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                        <th class="text-secondary opacity-7"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Model.RecentReports)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">#@report.Id - @report.Category</h6>
                                                        <p class="text-xs text-secondary mb-0">@report.Location</p>
                                                        <p class="text-xs text-secondary mb-0">by @(report.User?.UserName ?? "Unknown")</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    string statusClass = report.Status switch
                                                    {
                                                        "Pending" => "bg-gradient-warning",
                                                        "In-Progress" => "bg-gradient-info",
                                                        "Completed" => "bg-gradient-success",
                                                        _ => "bg-gradient-secondary"
                                                    };
                                                }
                                                <span class="badge badge-sm @statusClass">@report.Status</span>
                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                <span class="text-xs font-weight-bold">@report.DateSubmitted.ToString("MMM dd, yyyy")</span>
                                            </td>
                                            <td class="align-middle">
                                                <a href="@Url.Action("ReportDetails", new { id = report.Id })"
                                                   class="text-secondary font-weight-bold text-xs">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No reports found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Category Statistics -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Reports by Category</h6>
                </div>
                <div class="card-body p-3">
                    @if (Model.CategoryStatistics.Any())
                    {
                        @foreach (var stat in Model.CategoryStatistics)
                        {
                            var percentage = Model.TotalReports > 0 ? (double)stat.Count / Model.TotalReports * 100 : 0;
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span class="text-sm font-weight-bold">@stat.Category</span>
                                    <span class="text-sm">@stat.Count (@percentage.ToString("F1")%)</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-gradient-info" role="progressbar"
                                         style="width: @percentage.ToString("F1")%"
                                         aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No data available.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Reports", new { status = "Pending" })" class="btn btn-warning btn-block">
                                <i class="fas fa-clock"></i> View Pending Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Reports", new { status = "In-Progress" })" class="btn btn-info btn-block">
                                <i class="fas fa-spinner"></i> View In-Progress Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Reports", new { status = "Completed" })" class="btn btn-success btn-block">
                                <i class="fas fa-check"></i> View Completed Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Reports")" class="btn btn-primary btn-block">
                                <i class="fas fa-list"></i> View All Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>