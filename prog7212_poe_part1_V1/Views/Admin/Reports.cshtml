@model prog7212_poe_part1_V1.ViewModels.AdminReportsViewModel

@{
    ViewData["Title"] = "Manage Reports";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Manage Reports</h4>
                        <span class="badge bg-info">Total: @Model.Reports.Count reports</span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filters -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <form method="get" class="d-flex gap-3 align-items-end">
                                <div class="form-group">
                                    <label for="category" class="form-label">Filter by Category</label>
                                    <select name="category" id="category" class="form-select">
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category" selected="@(category == Model.SelectedCategory)">
                                                @category
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="status" class="form-label">Filter by Status</label>
                                    <select name="status" id="status" class="form-select">
                                        @foreach (var status in Model.Statuses)
                                        {
                                            <option value="@status" selected="@(status == Model.SelectedStatus)">
                                                @status
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Filter</button>
                                    <a href="@Url.Action("Reports")" class="btn btn-secondary">Clear</a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Reports Table -->
                    <div class="table-responsive">
                        @if (Model.Reports.Any())
                        {
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>User</th>
                                        <th>Category</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Date Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Model.Reports)
                                    {
                                        <tr>
                                            <td><strong>#@report.Id</strong></td>
                                            <td>@(report.User?.UserName ?? "Unknown User")</td>
                                            <td>
                                                <span class="badge bg-secondary">@report.Category</span>
                                            </td>
                                            <td>@report.Location</td>
                                            <td>
                                                @{
                                                    string statusClass = report.Status switch
                                                    {
                                                        "Pending" => "bg-warning text-dark",
                                                        "In-Progress" => "bg-info",
                                                        "Completed" => "bg-success",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@report.Status</span>
                                            </td>
                                            <td>@report.DateSubmitted.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-primary dropdown-toggle"
                                                            type="button" data-bs-toggle="dropdown">
                                                        Update Status
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <form method="post" asp-action="UpdateStatus" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="reportId" value="@report.Id" />
                                                                <input type="hidden" name="status" value="Pending" />
                                                                <button type="submit" class="dropdown-item"
                                                                @(report.Status == "Pending" ? "disabled" : "")>
                                                                    <i class="fas fa-clock text-warning"></i> Pending
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateStatus" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="reportId" value="@report.Id" />
                                                                <input type="hidden" name="status" value="In-Progress" />
                                                                <button type="submit" class="dropdown-item"
                                                                @(report.Status == "In-Progress" ? "disabled" : "")>
                                                                    <i class="fas fa-spinner text-info"></i> In-Progress
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateStatus" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="reportId" value="@report.Id" />
                                                                <input type="hidden" name="status" value="Completed" />
                                                                <button type="submit" class="dropdown-item"
                                                                @(report.Status == "Completed" ? "disabled" : "")>
                                                                    <i class="fas fa-check text-success"></i> Completed
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <a href="@Url.Action("ReportDetails", new { id = report.Id })"
                                                   class="btn btn-sm btn-outline-info ms-2">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No reports found matching the selected filters.</p>
                                <a href="@Url.Action("Reports")" class="btn btn-primary">View All Reports</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit form on select change for better UX
        document.getElementById('category').addEventListener('change', function() {
            this.form.submit();
        });

        document.getElementById('status').addEventListener('change', function() {
            this.form.submit();
        });

        // Confirmation for status updates
        document.querySelectorAll('form[asp-action="UpdateStatus"]').forEach(form => {
            form.addEventListener('submit', function(e) {
                const status = this.querySelector('input[name="status"]').value;
                const reportId = this.querySelector('input[name="reportId"]').value;

                if (!confirm(`Are you sure you want to update report #${reportId} status to "${status}"?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}