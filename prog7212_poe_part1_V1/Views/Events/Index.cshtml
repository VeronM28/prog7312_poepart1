@model prog7212_poe_part1_V1.Controllers.EventsViewModel

@{
    ViewData["Title"] = "Local Events & Announcements";
}

<div class="modern-events-container">
    <!-- Hero Header Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="hero-title">Discover Local Events</h1>
                    <p class="hero-subtitle">Explore exciting happenings in your community</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="stats-badge">
                        <span class="stats-number">@Model.UpcomingEvents.Count()</span>
                        <span class="stats-label">Upcoming Events</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container content-wrapper">
        <!-- Search Section -->
        <div class="search-section">
            <div class="search-card">
                <div class="search-header">
                    <i class="fas fa-search"></i>
                    <h5>Find Your Perfect Event</h5>
                </div>
                <div class="search-body">
                    <form method="post" asp-action="Search">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Category</label>
                                <select class="form-select modern-select" asp-for="SearchCriteria.Category">
                                    <option value="">All Categories</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category">@category</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">From Date</label>
                                <input type="date" class="form-control modern-input" asp-for="SearchCriteria.StartDate" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">To Date</label>
                                <input type="date" class="form-control modern-input" asp-for="SearchCriteria.EndDate" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Keywords</label>
                                <input type="text" class="form-control modern-input" asp-for="SearchCriteria.SearchTerm" placeholder="Search events..." />
                            </div>
                        </div>
                        <div class="search-actions">
                            <button type="submit" class="btn btn-modern-primary">
                                <i class="fas fa-search me-2"></i>Search Events
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-modern-secondary">
                                <i class="fas fa-redo me-2"></i>Clear Filters
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Recent Searches -->
        @if (Model.RecentSearches.Any())
        {
            <div class="recent-searches-section">
                <div class="section-header-small">
                    <i class="fas fa-history"></i>
                    <span>Recent Searches</span>
                </div>
                <div class="search-tags">
                    @foreach (var search in Model.RecentSearches)
                    {
                        <span class="search-tag">
                            @if (!string.IsNullOrEmpty(search.Category))
                            {
                                <span class="tag-item"><i class="fas fa-folder"></i> @search.Category</span>
                            }
                            @if (search.StartDate.HasValue)
                            {
                                <span class="tag-item"><i class="fas fa-calendar"></i> @search.StartDate.Value.ToShortDateString()</span>
                            }
                            @if (!string.IsNullOrEmpty(search.SearchTerm))
                            {
                                <span class="tag-item"><i class="fas fa-search"></i> @search.SearchTerm</span>
                            }
                        </span>
                    }
                </div>
            </div>
        }

        <!-- Recommendations -->
        @if (Model.Recommendations.Any())
        {
            <div class="recommendations-section">
                <div class="section-header">
                    <div class="section-title">
                        <i class="fas fa-star"></i>
                        <h3>Recommended For You</h3>
                    </div>
                    <p class="section-subtitle">Based on your interests and activity</p>
                </div>
                <div class="recommendations-grid">
                    @foreach (var recommendation in Model.Recommendations)
                    {
                        <div class="recommendation-card">
                            <div class="recommendation-badge">Featured</div>
                            <div class="recommendation-content">
                                <h6>@recommendation.Title</h6>
                                <p>@recommendation.Description</p>
                                <div class="recommendation-footer">
                                    <span class="date"><i class="fas fa-calendar-alt"></i> @recommendation.Date.ToString("MMM dd")</span>
                                    <span class="category-badge">@recommendation.Category</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Events Grid -->
        <div class="events-section">
            <div class="section-header">
                <div class="section-title">
                    <i class="fas fa-calendar-check"></i>
                    <h3>Upcoming Events</h3>
                </div>
                <p class="section-subtitle">@Model.UpcomingEvents.Count() events available</p>
            </div>

            @if (Model.UpcomingEvents.Any())
            {
                <div class="events-grid">
                    @foreach (var eventItem in Model.UpcomingEvents)
                    {
                        <div class="event-card">
                            <div class="event-card-header">
                                <span class="event-category">@eventItem.Category</span>
                                <span class="event-date">
                                    <i class="fas fa-calendar"></i>
                                    @eventItem.Date.ToString("MMM dd, yyyy")
                                </span>
                            </div>
                            <div class="event-card-body">
                                <h5 class="event-title">@eventItem.Title</h5>
                                <p class="event-description">@eventItem.Description</p>
                                <div class="event-info">
                                    <div class="info-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>@eventItem.Location</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-tag"></i>
                                        <span class="price">
                                            @if (eventItem.Price == 0)
                                            {
                                                <strong>Free</strong>
                                            }
                                            else
                                            {
                                                <strong>@eventItem.Price.ToString("C")</strong>
                                            }
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="event-card-footer">
                                <a href="@Url.Action("Details", new { id = eventItem.Id })" class="btn-details">
                                    View Details
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-events-container">
                    <div class="no-events-icon">
                        <i class="fas fa-calendar-times"></i>
                    </div>
                    <h4>No Events Found</h4>
                    <p>We couldn't find any events matching your criteria. Try adjusting your filters or check back later.</p>
                    <a href="@Url.Action("Index")" class="btn btn-modern-primary">
                        <i class="fas fa-redo me-2"></i>Reset Filters
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
