        font-size: 4rem;
        color: var(--border-color);
        margin-bottom: 1.5rem;
    }

    .no-events-container h4 {
        color: var(--text-primary);
        margin-bottom: 0.75rem;
        font-weight: 700;
    }

    .no-events-container p {
        color: var(--text-secondary);
        margin-bottom: 2rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

