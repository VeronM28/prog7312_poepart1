        }

    /* Section Headers */
    .section-header {
        margin-bottom: 2rem;
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
    }

        .section-title i {
            font-size: 1.5rem;
            color: var(--primary-color);
        }

        .section-title h3 {
            margin: 0;
