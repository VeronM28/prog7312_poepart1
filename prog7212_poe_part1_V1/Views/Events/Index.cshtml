    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 2rem;
    }

    .hero-subtitle {
        font-size: 1rem;
    }

    .stats-badge {
        margin-top: 1rem;
    }

    .search-body {
        padding: 1.5rem;
    }

    .events-grid,
    .recommendations-grid {
        grid-template-columns: 1fr;
    }

    .search-actions {
        flex-direction: column;
    }

    .btn-modern-primary,
    .btn-modern-secondary {
        width: 100%;
    }

    }

    @@media (max-width: 576px) {
        .hero-section

    {
        padding: 2rem 0;
    }

    .section-title h3 {
        font-size: 1.5rem;
    }

    }
</style>