@model IEnumerable<ReportModel>
@{
    ViewData["Title"] = "My Reports";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-file-earmark-text"></i> My Reports</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Submit New Report
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var report in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(report.ImagePath))
                                {
                                    <img src="@report.ImagePath" class="card-img-top" alt="Report Image"
                                         style="height: 200px; object-fit: cover;">
                                }
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="badge bg-primary">@report.Category</span>
                                        <span class="badge @(report.Status == "Pending" ? "bg-warning" :
                                                            report.Status == "In Progress" ? "bg-info" : "bg-success")">
                                            @report.Status
                                        </span>
                                    </div>
                                    <h5 class="card-title">@report.Location</h5>
                                    <p class="card-text flex-grow-1">
                                        @(report.Description.Length > 100 ?
                                            report.Description.Substring(0, 100) + "..." :
                                            report.Description)
                                    </p>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> @report.DateSubmitted.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-file-earmark-x display-1 text-muted"></i>
                    <h4 class="mt-3">No Reports Found</h4>
                    <p class="text-muted">You haven't submitted any reports yet.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Submit Your First Report
                    </a>
                </div>
            }
        </div>
    </div>
</div>